// -------------------------------
//  GENERATORS & DB
// -------------------------------
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

// -------------------------------
//  ENUMS
// -------------------------------
enum Role {
  SUPERADMIN
  ADMIN
  EMPLOYEE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

enum NoticeType {
  PUBLIC
  PRIVATE
  WARNING
}

enum ClientStatus {
  ACTIVE
  ON_HOLD
  CLOSED
}

enum ClientLogStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  CANCELLED
}

enum BinType {
  NOTE
  TODO
  IDEA
}

// -------------------------------
//  USER MODEL
// -------------------------------
model User {
  id           String  @id @default(uuid())
  name         String?
  email        String? @unique
  employeeCode String? @unique

  hashedPasscode String?
  passcode       String?

  role   Role       @default(EMPLOYEE)
  status UserStatus @default(ACTIVE)

  joinDate      DateTime  @default(now())
  meta          Json?
  avatar        String?
  image         String?
  emailVerified DateTime?
  isClockedIn   Boolean   @default(false)
  lastClockIn   DateTime?
  hours         Json?

  // auth relations
  accounts   Account[]
  sessions   Session[]
  logs       Log[]
  notices    Notice[]    @relation("UserNotices")
  recipients Recipient[]
  reminders  Reminder[]
  meetings   Meeting[]
  editTokens EditToken[]
  Bin        Bin[]

  // old system relations
  attendance        Attendance[]
  workLogs          WorkLog[]
  noticesIssued     Notice[]          @relation("AdminIssuedNotices")
  errorLogs         ErrorLog[]
  projects          Project[]         @relation("UserProjects")
  discussionPosts   DiscussionPost[]
  discussionReplies DiscussionReply[]
  clientAssignments ClientEmployee[]
  createdClientLogs ClientLog[]       @relation("UserClientLogs")

  passwordResetTokens PasswordResetToken[]

  // NEW â€” Email Logs sent by this user
  emailLogsSent EmailLog[] @relation("UserEmailLogs")
}

// -------------------------------
//  AUTH MODELS
// -------------------------------
model Account {
  id                String @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String

  refresh_token String? @db.Text
  access_token  String? @db.Text
  expires_at    Int?
  token_type    String?
  scope         String?
  id_token      String? @db.Text
  session_state String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(uuid())
  token     String   @unique
  expiresAt DateTime
  used      Boolean  @default(false)
  userId    String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model EditToken {
  id      String   @id @default(cuid())
  token   String   @unique
  expires DateTime
  userId  String

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// -------------------------------
//  LOG MODEL
// -------------------------------
model Log {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  meta Json?
}

// -------------------------------
//  NOTICE
// -------------------------------
model Notice {
  id String @id @default(uuid())

  issuedBy User   @relation("AdminIssuedNotices", fields: [adminId], references: [id], onDelete: Cascade)
  adminId  String

  targetUserId String?
  targetUser   User?   @relation("UserNotices", fields: [targetUserId], references: [id], onDelete: SetNull)

  type      NoticeType @default(PUBLIC)
  title     String
  message   String?
  content   String?
  createdAt DateTime   @default(now())
  updatedAt DateTime?  @updatedAt
  isPublic  Boolean    @default(true)

  recipients Recipient[]
}

model Recipient {
  id       String  @id @default(cuid())
  noticeId String
  userId   String
  isRead   Boolean @default(false)

  notice Notice @relation(fields: [noticeId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([noticeId, userId])
}

// -------------------------------
//  ATTENDANCE
// -------------------------------
model Attendance {
  id       String    @id @default(uuid())
  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId   String
  checkIn  DateTime
  checkOut DateTime?
}

// -------------------------------
//  WORK LOG
// -------------------------------
model WorkLog {
  id          String   @id @default(uuid())
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId      String
  date        DateTime @default(now())
  description String
  metadata    Json?
}

// -------------------------------
//  ERROR LOG
// -------------------------------
model ErrorLog {
  id         String   @id @default(uuid())
  user       User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  userId     String?
  route      String?
  message    String
  stacktrace String?
  component  String?
  metadata   Json?
  timestamp  DateTime @default(now())
  createdAt  DateTime @default(now())
}

// -------------------------------
//  DISCUSSION
// -------------------------------
model DiscussionPost {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  replies DiscussionReply[]
}

model DiscussionReply {
  id        String   @id @default(uuid())
  content   String
  createdAt DateTime @default(now())

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  post   DiscussionPost @relation(fields: [postId], references: [id], onDelete: Cascade)
  postId String
}

// -------------------------------
//  CLIENT MODELS
// -------------------------------
model Client {
  id           String       @id @default(uuid())
  name         String
  companyName  String?
  email        String?      @unique
  contactEmail String?
  contactPhone String?
  funds        Float?
  objective    String?
  notes        String?
  status       ClientStatus @default(ACTIVE)
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  employees ClientEmployee[]
  projects  ClientProject[]
  logs      ClientLog[]
  audits    ClientAudit[]
  reminders Reminder[]
}

model ClientLog {
  id       String @id @default(uuid())
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId String

  createdBy   User?   @relation("UserClientLogs", fields: [createdById], references: [id], onDelete: SetNull)
  createdById String?

  objective   String?
  demand      String?
  request     String?
  response    String?
  amount      Float?
  attachments Json?
  status      ClientLogStatus @default(OPEN)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  files ClientLogFile[]
}

model ClientLogFile {
  id    String    @id @default(uuid())
  log   ClientLog @relation(fields: [logId], references: [id], onDelete: Cascade)
  logId String

  project   Project? @relation(fields: [projectId], references: [id], onDelete: SetNull)
  projectId String?

  fileUrl      String
  cloudinaryId String?
  fileName     String
  fileType     String
  createdAt    DateTime @default(now())
}

model ClientAudit {
  id        String   @id @default(uuid())
  client    Client   @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId  String
  action    String
  changedBy String?
  data      Json?
  createdAt DateTime @default(now())
}

model ClientEmployee {
  id       String @id @default(uuid())
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  createdAt DateTime @default(now())

  @@unique([clientId, userId])
}

model ClientProject {
  id       String @id @default(uuid())
  client   Client @relation(fields: [clientId], references: [id], onDelete: Cascade)
  clientId String

  project   Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  projectId String

  createdAt DateTime @default(now())

  @@unique([clientId, projectId])
}

// -------------------------------
//  PROJECT MODEL
// -------------------------------
model Project {
  id          String   @id @default(uuid())
  name        String
  description String?
  createdAt   DateTime @default(now())

  users          User[]          @relation("UserProjects")
  clientLinks    ClientProject[]
  clientLogFiles ClientLogFile[]
}

// -------------------------------
//  REMINDERS
// -------------------------------
model Reminder {
  id     String @id @default(uuid())
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  clientName String?
  clientId   String?
  client     Client? @relation(fields: [clientId], references: [id])

  title       String
  description String?
  date        DateTime
  isRecurring Boolean  @default(false)
  time        String?

  createdAt DateTime  @default(now())
  updatedAt DateTime? @updatedAt
}

// -------------------------------
//  MEETING MODEL
// -------------------------------
model Meeting {
  id        String   @id @default(cuid())
  title     String
  date      DateTime
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
}

// -------------------------------
//  BIN MODEL
// -------------------------------
model Bin {
  id        String    @id @default(uuid())
  content   String
  type      String?
  date      DateTime?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String

  meta Json?
}

// -------------------------------
//  EMAIL LOG MODEL (NEW)
// -------------------------------
model EmailLog {
  id String @id @default(uuid())

  senderId String
  sender   User   @relation("UserEmailLogs", fields: [senderId], references: [id])

  recipients Json
  subject    String
  message    String
  status     String
  createdAt  DateTime @default(now())
}
