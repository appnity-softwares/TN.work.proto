
datasource db {
  provider     = "postgresql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            String    @id @default(cuid()) 
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(EMPLOYEE)

  // Passcode instead of Password
  passcode String?

  // Employee-specific fields
  employeeCode String?   @unique
  status       UserStatus? @default(ACTIVE)
  isClockedIn  Boolean   @default(false)
  lastClockIn  DateTime?
  hours        Json?
  meta         Json?

  accounts Account[]

  // TaskNity specific relations
  sessions      Session[]
  logs          Log[]
  notices       Notice[]
  recipients    Recipient[]
  reminders     Reminder[]
  meetings      Meeting[]
  passwordResetPasswordResetToken[]
  editTokens    EditToken[] // Relation to EditToken
  Bin           Bin[]
}

enum Role {
  SUPERADMIN
  ADMIN
  EMPLOYEE
}

enum UserStatus {
  ACTIVE
  INACTIVE
  SUSPENDED
}

model Account {
  id                String  @id @default(cuid()) 
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  token     String   @unique
  expiresAt DateTime
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
}

// Add the new EditToken model
model EditToken {
  id        String   @id @default(cuid())
  token     String   @unique
  expires   DateTime
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}


// App specific models

// User work logs
model Log {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  meta      Json?
}

// Admin notices
model Notice {
  id        String      @id @default(cuid())
  title     String
  content   String
  createdAt DateTime    @default(now())
  updatedAt DateTime    @updatedAt
  authorId  String
  author    User        @relation(fields: [authorId], references: [id], onDelete: Cascade)
  isPublic  Boolean     @default(true)
  meta      Json?
  recipients Recipient[]
}

model Recipient {
  id       String @id @default(cuid())
  noticeId String
  userId   String
  isRead   Boolean @default(false)
  notice   Notice @relation(fields: [noticeId], references: [id], onDelete: Cascade)
  user     User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([noticeId, userId])
}

// Error logging
model ErrorLog {
  id        String   @id @default(cuid())
  message   String
  stack     String?
  component String?
  createdAt DateTime @default(now())
}

model Reminder {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime
  isRecurring Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  clientId    String?
  client      Client?  @relation(fields: [clientId], references: [id])
}

model Meeting {
  id        String   @id @default(cuid()) 
  title     String
  date      DateTime
  notes     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model Bin {
  id        String   @id @default(cuid()) 
  type      String
  content   String
  date      DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  meta      Json?
}

model Client {
  id        String   @id @default(cuid())
  name      String
  email     String?  @unique
  reminders Reminder[]
}
